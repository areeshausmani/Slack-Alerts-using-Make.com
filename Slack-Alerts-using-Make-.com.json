{
  "name": "Lead Categorization & Slack Alert Workflow",
  "author": "areeshausmani93@gmail.com",
  "flow": [
    {
      "id": 1,
      "module": "webhook:CustomWebhook",
      "parameters": {
        "hook": "YOUR_WEBHOOK_ID",
        "maxResults": 1
      }
    },
    {
      "id": 2,
      "module": "openai-gpt-4:CreateCompletion",
      "parameters": {
        "connection": "YOUR_OPENAI_CONNECTION"
      },
      "mapper": {
        "model": "gpt-4",
        "max_tokens": "300",
        "temperature": "1",
        "messages": [
          {"role": "system", "content": "Categorize replies as Positive, Not Interested, or Unsubscribe."},
          {"role": "user", "content": "{{1.reply_text}}"}
        ]
      }
    },
    {
      "id": 3,
      "module": "json:Parse",
      "mapper": { "json": "{{2.choices[].message.content}}" }
    },
    {
      "id": 4,
      "module": "slack:SendMessage",
      "parameters": { "connection": "YOUR_SLACK_CONNECTION" },
      "mapper": {
        "channel": "sales-leads",
        "text": "New lead categorized as {{3.category}}: {{1.firstName}} {{1.lastName}}"
      }
    }
  ],
  "metadata": { "tool": "Make.com", "owner": "areeshausmani93@gmail.com" }
}
